{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": { "jsx": true }
    },
    "plugins": ["prettier", "react"],
    "rules": {
        "prettier/prettier": "error",
        "strict": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
